extends layout
block content
    h1= title
    div.newarticle
        form( method="post")
            div
                div
                    span.label Title :
                    input(type="text", name="title", id="editArticleTitle")
                div
                    span.label Author :
                    input(type="text", name="author", id="editArticleAuthor")
                div
                    span.label Description :
                    textarea(name="description", rows=4, id="editArticleDescription")
                div#editArticleSubmit
                    input(type="submit", value="Save")
        a(href="/")!= "Back to Article List"